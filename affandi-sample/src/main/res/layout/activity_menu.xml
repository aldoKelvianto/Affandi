<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/fab_margin"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_single_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtnSingleImageClick"
        android:text="@string/single_image" />

    <Button
        android:id="@+id/btn_five_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtnFiveImageClick"
        android:text="@string/five_image" />

    <Button
        android:id="@+id/btn_five_random_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtnFiveRandomImageClick"
        android:text="@string/five_random_image" />

    <Button
        android:id="@+id/btn_image_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBtnImageListClick"
        android:text="@string/image_list" />

</LinearLayout>